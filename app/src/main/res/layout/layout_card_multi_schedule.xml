<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="4dp">

        <RelativeLayout
            android:id="@+id/multi_schedule_card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/schedule_card_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:background="@color/card_background">

                <TextView
                    android:id="@+id/schedule_card_course"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/card_text_size_3"
                    android:ellipsize="end"
                    android:singleLine="false"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/schedule_card_faculty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="@dimen/card_text_size_2"/>

            </LinearLayout>

            <TextView
                android:id="@+id/schedule_card_no_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:background="@android:color/white"
                android:text="No Schedule"
                android:gravity="center"
                android:textSize="@dimen/card_text_size_3"
                android:visibility="gone"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>