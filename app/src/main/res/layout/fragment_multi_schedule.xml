<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tcs.myilptvapp.fragment.MultiScheduleFragment"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/multi_schedule_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Schedule"
            android:textSize="@dimen/fragment_title_size"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/multi_schedule_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Thu, 20 Oct 2016"
            android:textColor="@color/colorText"/>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/multi_schedule_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="afterDescendants"
        android:nextFocusUp="@+id/schedule_batch_et"
        android:nextFocusDown="@null"/>

</LinearLayout>
