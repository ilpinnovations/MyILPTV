<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tcs.myilptvapp.fragment.MultiScheduleFragment"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/multi_schedule_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Schedule"
            android:textSize="@dimen/fragment_title_size"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/multi_schedule_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Thu, 20 Oct 2016"
            android:textColor="@color/colorText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/multi_schedule_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="SLOT A"
            android:gravity="center"
            android:textSize="@dimen/card_text_size_3"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/schedule_slot1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="SLOT A"
            android:gravity="center"
            android:textSize="@dimen/card_text_size_2"
            android:textColor="@color/colorText"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/schedule_slot2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="SLOT B"
            android:gravity="center"
            android:textSize="@dimen/card_text_size_2"
            android:textColor="@color/colorText"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/schedule_slot3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="SLOT C"
            android:gravity="center"
            android:textSize="@dimen/card_text_size_2"
            android:textColor="@color/colorText"
            android:layout_weight="1"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/multi_schedule_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="afterDescendants"
        android:nextFocusUp="@+id/schedule_batch_et"
        android:nextFocusDown="@null"/>

</LinearLayout>
